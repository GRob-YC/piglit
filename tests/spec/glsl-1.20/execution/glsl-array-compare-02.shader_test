[require]
GLSL >= 1.20

[vertex shader]
/* Verify that two arrays can be directly compared correctly.
 */
void main()
{
	gl_Position = gl_Vertex;
}

[fragment shader]

void main()
{
	float ff[2];
	float fff[2];

	ff[0] = fff[0] = 3.3;
	ff[1] = fff[1] = 3.5;

	if (fff != ff)
		gl_FragColor = vec4(1.0, 0.0, 0.0, 1.0);
	else
		gl_FragColor = vec4(0.0, 1.0, 0.0, 1.0);
}

[test]
draw rect -1 -1 2 2
probe all rgba 0.0 1.0 0.0 1.0
