# Test for successful linking between vertex and fragment shaders when
# component qualifiers match.

# Do not use an array size of 32, as this is the 3.30 spec requirement and
# is not a limit this test should be verifying

[require]
GLSL >= 1.40
GL_ARB_enhanced_layouts
GL_ARB_separate_shader_objects

[vertex shader]
#version 140
#extension GL_ARB_enhanced_layouts: require
#extension GL_ARB_separate_shader_objects: require

// consume X/Y/Z components of 24 vectors
layout(location = 0) out vec3 a[24];

// consumes W component of first vector
layout(location = 0, component = 3) out float b;

void main()
{
  a[0] = vec3(1.0);
  b = float(0.5);
}

[fragment shader]
#version 140
#extension GL_ARB_enhanced_layouts: require
#extension GL_ARB_separate_shader_objects: require

out vec4 color;

// consume X/Y/Z components of 24 vectors
layout(location = 0) in vec3 a[24];

// consumes W component of first vector
layout(location = 0, component = 3) in float b;

void main()
{
  color = vec4(b, a[0]);
}

[test]
link success
