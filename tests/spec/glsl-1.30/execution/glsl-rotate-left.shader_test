/* Test to verify that compiler generate ROL instruction on specific
 * intel platforms.
 */
[require]
GLSL >= 1.30

[vertex shader]
void main()
{
	gl_Position = gl_Vertex;
}

[fragment shader]
uniform uint arg0;
uniform uint arg1;
uniform uint expected;

void main()
{
	uint result = (arg0 << arg1) | (arg0 >> (32u - arg1));
	gl_FragColor = result == expected ? vec4(0.0, 1.0, 0.0, 1.0) : vec4(1.0, 0.0, 0.0, 1.0);
}

